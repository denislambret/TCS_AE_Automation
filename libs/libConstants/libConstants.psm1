<#
    .SYNOPSIS
        Global variables
    
    .DESCRIPTION
        Set script's global variables shared with all callers
#>

# Separators definitions
$LineSize     = 132
$SEP_L1       = '-' * $LineSize
$SEP_L2       = '.' * $LineSize

# Standard exit code
$EXIT_OK      = 0
$EXIT_KO      = 1
$OK           = $true
$KO           = $true

# Network errors
$ERROR_HOST_NOT_REACHABLE      = 110

# Log facility errors
$ERROR_LOG_INITIALIZATION      = 100

# Resource errors
$ERROR_RESSOURCE_NOT_FOUND     = 120
$ERROR_PAGE_NOT_FOUND          = 121
$ERROR_FILE_NOT_FOUND          = 122

$ERROR_DB_LOGIN                = 130


    #..................................................................................................................................
    # Function : EXIT_OK
    #..................................................................................................................................    
    function Exit-KO {
        Pop-Location
        Stop-Log
        exit $EXIT_KO
    }
    
    #..................................................................................................................................
    # Function : EXIT_OK
    #..................................................................................................................................
    function Exit-OK {
        Pop-Location
        Log -Level 'INFO' -message $SEP_L1
        Stop-Log | Out-Null
        exit $EXIT_OK
    }

